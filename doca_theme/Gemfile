source 'https://rubygems.org'

group :development do
  # Required for Capistrano
  gem 'railsless-deploy'
  gem 'capistrano', '~>2.5.5'
  gem 'capistrano-ext'
  gem 'capistrano-drupal'
end

group :frontend do
  gem 'breakpoint',     '~> 2.5.0'
  gem 'bundler',        '> 1.7.3'
  gem 'compass',        '~> 1.0.1'
  # Build compass sprites faster with oily_png.
  gem 'oily_png',       '~> 1.1.2'
  gem 'sass',           '~> 3.4.5'
  gem 'sass-globbing',  '~> 1.1.1'
  gem 'scss-lint',      '~> 0.33.0'
  gem "singularitygs",  '~>1.4'
  gem 'compass-import-once', '~> 1.0.5'
end
